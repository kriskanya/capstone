<h1> Courses index </h1>

<% @courses.each do |course| %>
  <div class="col-sm-1">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-1">
      <ul class="glyphicon glyphicon-arrow-up"></ul>
      <ul class="glyphicon glyphicon-arrow-down"></ul>
    </div>
  </div>
  <div class="col-sm-10">
    <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "#{course.name}", "http://#{course.url}" %>
        </div>
        <div class="panel-body">
          <%= "#{course.description}" %>
        </div>
      <p class="pull-right">
        <span class="label label-default">keyword</span>
        <span class="label label-default">tag</span>
        <span class="label label-default">post</span></p>
      <ul class="list-inline pull-left">
        <li><a href="#">2 Days Ago</a></li>
        <li><i class="glyphicon glyphicon-comment"></i>
           <%= link_to "Comments", course_comments_path(course) %>
        </li>
        <li><i class="glyphicon glyphicon-edit"></i>
          <%= link_to "Edit", edit_course_path(course) %>
        </li></ul>
    </div>
  </div>
  <hr>
<% end %>
