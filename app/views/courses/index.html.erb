<% @courses.each do |course| %>
  <div class="col-sm-10">
    <div class="panel panel-default">
        <div class="panel-heading">
          <%= link_to "#{course.name}", "http://#{course.url}" %>
        </div>
        <div class="panel-body">
          <%= "#{course.description}" %>
        </div>
      <p class="pull-right">
        <span class="label label-default">keyword</span>
        <span class="label label-default">tag</span>
        <span class="label label-default">post</span></p>
      <ul class="list-inline pull-left">
        <li><a href="#">2 Days Ago</a></li>
        <li><a href="#"><i class="glyphicon glyphicon-comment"></i> 2 Comments</a></li>
        <li><a href="#"><i class="glyphicon glyphicon-share"></i> 14 Shares</a></li></ul>
    </div>
  </div>
  <hr>
<% end %>
